.theme-dark
  // 导航栏
  .navbar
    box-shadow 0 2px 8px #0f0e0d

    .navlinks a
      fontColor()

    // 更新导航栏颜色
    .nav-item > a, a.repo-link
      fontColor()

      &.router-link-active
        color darken($accentColor, 10%)

    .dropdown-wrapper .dropdown-title
      fontColor()

    @media (min-width: $MQMobile)
      .nav-links a
        &:hover
          fontColor()

      // 导航栏下拉菜单
      .dropdown-wrapper
        .nav-dropdown
          boxShadow()

    .suggestions
      borderColor()

    .suggestion
      a
        color darken($nightFontcolor, 35%)

      &.focused a
        color $accentColor
