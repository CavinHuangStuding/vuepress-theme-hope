.theme-dark
  // 页面信息
  .page
    .page-info
      fontcolor()

    // valine 评论按钮
    .valine-wrapper
      #valine
        *
          color #aaa

        code, pre
          background-color #282c34

        blockquote
          color #999

        .vbtn
          bgcolor()

          &:active, &:hover
            color #fff
            background-color $accentColor

        .vlist .vcard .vhead .vsys
          background #121212
          color #4c4e4e
