.theme-dark
  // 滚动条
  ::-webkit-scrollbar-thumb:vertical, ::-webkit-scrollbar-thumb:horizontal
    background-color darken($accentColor, 20%)

  // 密码
  .passwordCtn .inputCtn input
    background-color #000 !important
    color #fff !important

  // 主页
  .home
    .feature:hover
      boxShadow()

  // 博客主页
  .page.blog
    .blog-page-wrapper
      .blogger-info-wrapper
        boxShadow()

        &:hover
          box-shadow 4px 4px 20px #0f0e0d

  // 文章列表
  .article-wrapper
    .article
      boxShadow()

      &:hover
        box-shadow 4px 4px 20px #0f0e0d

      .sticky-icon .sticky-text
        fill #000

  // 博主信息
  .blogger-info
    .num > div:first-child
      border-right 1px solid #888

  // 分类标签
  .category-list-wrapper
    .category
      boxShadow()

      .category-name
        color #999

        &:hover, &.active
          color #000

        .category-num
          color #000
