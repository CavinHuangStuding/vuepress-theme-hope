.theme-dark
  // 滚动条
  ::-webkit-scrollbar-thumb:vertical, ::-webkit-scrollbar-thumb:horizontal
    background-color darken($accentColor, 20%)

  // 密码
  .passwordCtn .inputCtn input
    background-color #000 !important
    color #fff !important

  // 主页
  .home
    .feature:hover
      box-shadow 1px 1px 6px 0 rgba(223, 222, 219, 0.28)

  // 博客主页
  .page.blog
    .blog-page-wrapper
      .blogger-info-wrapper
        boxshadow()

  // 文章列表
  .article-wrapper
    .article
      boxshadow()

      .sticky-icon .sticky-text
        fill #000

  // 博主信息
  .blogger-info
    .num > div:first-child
      border-right 1px solid #888

  // 标签列表
  .tag-list-wrapper
    .tag
      boxshadow()

      .tag-name
        color #ddd
