
// 导航栏样式更新
.navbar
  box-shadow 0 2px 8px #f0f1f2

  .navlinks a
    color #666

  // 更新导航栏颜色
  .nav-item > a, a.repo-link
    color #666

    &:hover, &.router-link-active
      border-bottom 2px solid darken($accentColor, 10%)

    &.router-link-active
      color darken($accentColor, 10%)

  .nav-dropdown .dropdown-item a
    &:hover
      color darken($accentColor, 15%)

    &.router-link-active
      color darken($accentColor, 15%)

  .dropdown-wrapper .dropdown-title
    color #666

    &::after
      border-left 5px solid darken($accentColor, 15%)

  @media (min-width: $MQMobile)
    .nav-links a
      &:hover
        color #666

    // 导航栏下拉菜单
    .dropdown-wrapper
      .dropdown-title:hover
        darken($accentColor, 15%)

      .nav-dropdown
        border-color #eee
        box-shadow 2px 2px 10px #f0f1f2

        .dropdown-item a
          color #666

  // 更新搜索框样式
  .search-box input
    border-color transparent
    border-radius 0.25em

    @media (max-width: $MQMobile)
      left 0

    @media (min-width: $MQNarrow)
      background-color #efeef4

    &:focus
      background-color #fff
      border-color $accentColor

// 侧边栏样式更新
.sidebar
  box-shadow 2px 0 8px #f0f1f2

  a
    color $textColor

// 滚动条
::-webkit-scrollbar
  width 6px
  height 6px

::-webkit-scrollbar-track-piece
  background-color rgba(0, 0, 0, 0.1)
  -webkit-border-radius 6px

::-webkit-scrollbar-thumb:vertical
  height 6px
  background-color $accentColor
  -webkit-border-radius 6px

::-webkit-scrollbar-thumb:horizontal
  width 6px
  background-color $accentColor
  -webkit-border-radius 6px
