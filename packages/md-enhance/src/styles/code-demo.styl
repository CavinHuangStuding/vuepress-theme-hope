.code-demo-wrapper
  margin-top 10px
  border 1px solid var(--border-color, #eaecef)
  border-radius 4px
  transition all 0.2s

  &:hover
    box-shadow 0 2px 12px var(--card-shadow-color, rgba(0, 0, 0, 0.15))

  div
    box-sizing border-box

  .display-wrapper
    max-height 400px
    padding 20px
    border-bottom 1px solid var(--border-color, #eaecef)
    overflow auto

  .code-demo-app
    @media (max-width 1000px)
      margin-left auto !important
      margin-right auto !important

  .code-wrapper
    overflow hidden
    height 0
    padding 0 !important
    background-color var(--code-bgcolor, #ecf4fa)
    border-radius 0 !important
    transition height 0.5s

    pre
      margin 0 !important

  .code-demo-h-code
    @media (max-width 1000px)
      display none

  .code-demo-footer
    position relative
    text-align center

    &.show-link
      .code-demo-jsfiddle, .code-demo-codepen
        opacity 1

      .expand::before
        border-top none
        border-right 6px solid transparent
        border-bottom 6px solid #ccc
        border-left 6px solid transparent

    form:nth-last-child(2)
      right 50px

    form:last-child
      right 10px

    .button
      border-color transparent
      background-color transparent
      font-size 14px
      color #3eaf7c
      cursor pointer
      outline none
      margin 0
      width 46px
      position relative

      &:hover
        &::before
          content attr(data-tip)
          position absolute
          top -28px
          left 50%
          z-index 100
          padding 6px
          border-radius 4px
          background-color rgba(0, 0, 0, 0.8)
          color #eee
          font-size 12px
          line-height 1
          white-space nowrap
          transform translateX(-50%)

        &::after
          content '' !important
          display block
          position absolute
          left 50%
          top -5px
          transform translateX(-50%)
          border 5px solid transparent
          border-top-color rgba(0, 0, 0, 0.8)

        svg
          fill var(--accent-color, $accentColor)

      svg
        width 34px
        height 20px
        fill #ccc

    .code-demo-jsfiddle, .code-demo-codepen
      position absolute
      top 10px
      transition all 0.5s

      &:hover
        opacity 1

    .expand
      position relative
      width 100px
      height 40px
      margin 0
      color var(--accent-color, $accentColor)
      font-size 14px
      background-color transparent
      border-color transparent
      outline none
      transition all 0.5s
      cursor pointer

      &::before
        content ''
        position absolute
        top 50%
        left 50%
        width 0
        height 0
        border-top 6px solid var(--grey12, #bbb)
        border-right 6px solid transparent
        border-left 6px solid transparent
        transform translate(-50%, -50%)

      &:hover
        opacity 1

        &::before
          border-top-color var(--accent-color, $accentColor)
          border-bottom-color var(--accent-color, $accentColor)

  &.horizontal
    .display-wrapper
      height 400px
      display flex

      .code-demo-app
        width 300px
        border 1px solid #ebebeb
        box-shadow 1px 1px 3px #ebebeb
        margin-right 5px
        overflow auto

      .code-demo-h-code
        flex 1
        overflow auto
        height 100%

        > pre
          overflow visible
