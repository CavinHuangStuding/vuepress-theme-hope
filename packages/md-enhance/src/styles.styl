// 自定义容器 居中、居右
.custom-block
  &.right
    text-align right

  &.center
    text-align center

// 脚注链接跳转修正
.footnotes .footnotes-list .footnote-item
  margin-top (- $navbarHeight)
  padding-top ($navbarHeight + 0.5rem)

  p
    margin-bottom 0

// 页脚标注
.footnote-ref
  position relative
  margin-top - $navbarHeight - 0.5rem
  padding-top (($navbarHeight + 0.5rem))

  .footnote-anchor
    position absolute
    top 0

// TODO: Remove
&.details
  display block
  position relative
  border-radius 2px
  margin 1.6em 0
  padding 1.6em
  background-color #eee

  h4
    margin-top 0

  figure, p
    &:last-child
      margin-bottom 0
      padding-bottom 0

  summary
    outline none
    cursor pointer

// katex 修正
.katex
  font-size 1.05em

.katex-display
  padding-top 0.08em
  padding-bottom 0.08em
  overflow-x auto
  overflow-y hidden
  -webkit-overflow-scrolling touch
